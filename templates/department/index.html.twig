{% extends 'base.html.twig' %}

{% block title %}COVID-19 Figures|{{ data[0].state }}
{% endblock %}

{% block body %}
	<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
		<h1 class="display-4 text-danger">COVID-19 Figures - {{ data[0].state }}</h1>
		<p class="lead">Source: <span class="text-info">{{ data[0].totalTestResultsSource }}</span></p>
		<p class="lead">Last Updated Date: <span class="text-primary">{{ data[0].date }}</span></p>
	</div>

	<div class="card mb-5 shadow-lg">
		<div class="card-body">
			{{ render_chart(chart) }}
		</div>
	</div>

	<div class="row text-center">
		<div class="col">
			<div class="card mb-4 shadow-sm mt-4">
				<div class="card-header">
					<h4 class="my-0 fw-normal">Number of Hospitalizations</h4>
				</div>
				<div class="card-body">
					<h1 class="card-title bg-warning pricing-card-title">{{ data[0].hospitalizedCurrently | default('No Data Available') }}</h1>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card mb-4 shadow-sm mt-4">
				<div class="card-header">
					<h4 class="my-0 fw-normal">Number of ICU Patients</h4>
				</div>
				<div class="card-body">
					<h1 class="card-title bg-success pricing-card-title">{{ data[0].inIcuCurrently | default('No Data Available') }}</h1>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
